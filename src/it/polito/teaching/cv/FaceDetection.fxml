<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.CheckBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="it.polito.teaching.cv.FaceDetectionController">
	<center>
		<VBox alignment="CENTER">
			<padding>
				<Insets left="10" right="10" />
			</padding>
   <children>
   			<ImageView fx:id="originalFrame" />
   </children>
		</VBox>
	</center>
	<bottom>
		<HBox alignment="CENTER">
			<padding>
				<Insets bottom="25" left="25" right="25" top="25" />
			</padding>
   <children>
   			<Button fx:id="cameraButton" alignment="center" onAction="#startCamera" text="Start camera" />
   			<HBox alignment="CENTER">
			<padding>
				<Insets bottom="0" left="25" right="25" top="0" />
			</padding>
		</HBox>
   			<Button fx:id="saveImageButton" alignment="center" onAction="#saveImage" text="Save image" />
   </children>
		</HBox>
	</bottom>
</BorderPane>
